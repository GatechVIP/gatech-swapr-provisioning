server {
    listen       80 default;

    location / {
        root /home/swapr/client/dist;
    }

    location /api {
        proxy_pass   http://127.0.0.1:3000;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }
}